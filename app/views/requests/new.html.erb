<h1>A new question</h1>

<div >
  <div>
    <%= form_for(@request) do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>

      <%= f.label :contact %><br>
      <%= f.text_field :contact %><br>

      <%= f.label :content%><br>
      <%= f.text_field :content %><br>

      <%= f.submit "Ask", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
